<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/name"
                android:paddingTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textname"
                android:text="Yo yo Honeysingh"
                android:layout_below="@+id/name"
                android:textSize="20sp"
                android:textColor="#f00"
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Contact no."
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/textname"
                android:id="@+id/contact"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textcontact"
                android:text="9090909090"
                android:layout_below="@+id/contact"
                android:textSize="20sp"
                android:textColor="#f00"
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Locality"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/textcontact"
                android:id="@+id/locality"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textlocality"
                android:text="Navrangpura"
                android:layout_below="@+id/locality"
                android:textSize="20sp"
                android:textColor="#f00"
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Email-id"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/textlocality"
                android:id="@+id/email"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textemail"
                android:text="honeysingh@yoyo.com"
                android:layout_below="@+id/email"
                android:textSize="20sp"
                android:textColor="#f00"
                android:paddingTop="4dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Complains Posted:"
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/textemail"
                android:id="@+id/post"
                android:paddingTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textpost"
                android:visibility="gone"
                android:text="15"
                android:layout_toRightOf="@+id/post"
                android:layout_below="@+id/textemail"
                android:textSize="35sp"
                android:textColor="#f00"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Complains Solved:"
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/textpost"
                android:id="@+id/solve"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textsolve"
                android:visibility="gone"
                android:text="5"
                android:layout_toRightOf="@+id/solve"
                android:layout_below="@+id/textpost"
                android:textSize="35sp"
                android:textColor="#f00"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_margin="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/honey"/>


        </RelativeLayout>


    </LinearLayout>
</ScrollView>